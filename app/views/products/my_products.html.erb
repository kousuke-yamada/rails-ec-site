<% content_for :title, "出品した商品" %>

<%= content_for :head do %>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300;400;500;700&display=swap');
    body {
      font-family: 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Hiragino Sans', sans-serif;
    }
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
  </style>
<% end %>

<div class="bg-gray-100 min-h-screen">
  <!-- ヘッダー -->
  <header class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="text-2xl font-bold text-red-500">メルカリ</div>
        <nav class="hidden md:flex items-center space-x-4">
          <%= link_to "ホーム", root_path, class: "text-gray-700 hover:bg-gray-100 px-4 py-2 rounded-lg transition-colors" %>
          <%= link_to "出品した商品", my_products_products_path, class: "text-gray-700 hover:bg-gray-100 px-4 py-2 rounded-lg transition-colors" %>
          <%= link_to "商品を出品", listing_products_path, class: "bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors" %>
        </nav>
      </div>
    </div>
  </header>

  <div class="max-w-7xl mx-auto px-4 py-6">
    <!-- ページヘッダー -->
    <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">出品した商品</h1>
      <p class="text-gray-600 text-sm">あなたが出品した商品の一覧です（<%= @products.count %>件）</p>
    </div>

    <% if @products.any? %>
      <!-- 商品グリッド -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @products.each do |product| %>
          <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transform hover:-translate-y-1 transition-all duration-300 cursor-pointer" onclick="location.href='<%= product_path(product) %>'">
            <div class="w-full h-48 bg-gray-100 flex items-center justify-center overflow-hidden">
              <% if product.images.any? %>
                <%= image_tag product.images.first, alt: product.name, class: "w-full h-full object-cover" %>
              <% else %>
                <span class="text-5xl text-gray-400">📷</span>
              <% end %>
            </div>
            
            <div class="p-4">
              <h3 class="font-medium text-gray-900 mb-2 line-clamp-2">
                <%= product.name %>
              </h3>
              
              <div class="text-xl font-bold text-red-500 mb-2">
                ¥<%= number_with_delimiter(product.price.to_i) %>
              </div>
              
              <% if product.description.present? %>
                <p class="text-sm text-gray-600 mb-3 line-clamp-2">
                  <%= truncate(product.description, length: 60) %>
                </p>
              <% end %>
              
              <div class="flex justify-between items-center text-xs text-gray-500">
                <span><%= product.created_at.strftime("%m/%d") %></span>
                <% if product.respond_to?(:sold?) && product.sold? %>
                  <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full font-medium">売却済み</span>
                <% else %>
                  <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full font-medium">出品中</span>
                <% end %>
              </div>
              
              <!-- 商品の詳細情報 -->
              <div class="mt-3 pt-3 border-t border-gray-100">
                <div class="flex flex-wrap gap-2 text-xs">
                  <% if product.condition_id.present? %>
                    <span class="bg-blue-50 text-blue-700 px-2 py-1 rounded">
                      <%= get_condition_name(product.condition_id) %>
                    </span>
                  <% end %>
                  
                  <% if product.category_id.present? %>
                    <span class="bg-purple-50 text-purple-700 px-2 py-1 rounded">
                      <%= get_category_name(product.category_id) %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <!-- 空の状態（商品がない場合） -->
      <div class="bg-white rounded-xl shadow-sm p-12 text-center">
        <div class="text-6xl mb-4 opacity-50">📦</div>
        <h2 class="text-xl text-gray-600 mb-2">まだ商品を出品していません</h2>
        <p class="text-gray-500 mb-6">最初の商品を出品して、販売を始めましょう！</p>
        <%= link_to "商品を出品する", listing_products_path, class: "inline-block bg-red-500 text-white px-6 py-3 rounded-lg font-medium hover:bg-red-600 transition-colors" %>
      </div>
    <% end %>
  </div>

  <!-- フローティングアクションボタン -->
  <%= link_to listing_products_path, class: "fixed bottom-8 right-8 w-14 h-14 bg-red-500 text-white rounded-full text-2xl flex items-center justify-center shadow-lg hover:bg-red-600 hover:shadow-xl transform hover:scale-110 transition-all duration-300 z-50" do %>
    +
  <% end %>
</div>

<script>
  // レスポンシブ対応：モバイルでは2列表示
  function updateGridLayout() {
    const grid = document.querySelector('.grid');
    if (grid && window.innerWidth < 640) {
      grid.className = 'grid grid-cols-2 gap-4';
    } else if (grid) {
      grid.className = 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6';
    }
  }

  window.addEventListener('resize', updateGridLayout);
  document.addEventListener('DOMContentLoaded', updateGridLayout);
</script>