<div style="max-width: 600px; margin: 0 auto; background: white; min-height: 100vh; font-family: -apple-system, BlinkMacSystemFont, 'Hiragino Sans', 'Noto Sans JP', sans-serif;">
  <!-- ヘッダー -->
  <div style="background: linear-gradient(135deg, #ff6b6b, #ff8787); color: white; padding: 1rem;">
    <h1 style="margin: 0; font-size: 1.5rem; font-weight: bold;">🛍️ マイページ</h1>
  </div>

  <!-- プロフィール情報 -->
  <div style="padding: 2rem 1rem; text-align: center; background: linear-gradient(135deg, #ff6b6b, #ff8787); color: white;">
    <div style="width: 80px; height: 80px; border-radius: 50%; background: white; display: flex; align-items: center; justify-content: center; margin: 0 auto 1rem; font-size: 2rem; color: #ff6b6b; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">👤</div>
    <div style="font-size: 1.3rem; font-weight: bold; margin-bottom: 0.5rem;"><%= @user_name %></div>
    <div style="opacity: 0.9;">⭐ <%= @user_rating %> ・ 評価 <%= @review_count %>件</div>
  </div>

  <!-- 出品商品 -->
  <div style="padding: 1rem;">
    <h2 style="color: #333; margin-bottom: 1rem;">出品商品</h2>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(150px, 1fr)); gap: 1rem;">
      <% @products.each_with_index do |product, index| %>
        <div style="background: white; border-radius: 8px; overflow: hidden; box-shadow: 0 2px 8px rgba(0,0,0,0.1); cursor: pointer; transition: transform 0.3s ease;" onmouseover="this.style.transform='translateY(-2px)'" onmouseout="this.style.transform='translateY(0)'">
          <div style="width: 100%; height: 120px; background: linear-gradient(45deg, #f0f0f0, #e0e0e0); display: flex; align-items: center; justify-content: center; font-size: 2rem; color: #999;">
            <%= case index
                when 0 then "📱"
                when 1 then "👕"
                when 2 then "📚"
                when 3 then "🎮"
                when 4 then "⌚"
                when 5 then "🎧"
                else "📦"
                end %>
          </div>
          <div style="padding: 0.75rem;">
            <div style="font-size: 0.85rem; font-weight: bold; margin-bottom: 0.5rem; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= product[:name] %></div>
            <div style="color: #ff6b6b; font-weight: bold; font-size: 1rem;">¥<%= number_with_delimiter(product[:price]) %></div>
            <div style="background: <%= product[:status] == '売り切れ' ? '#dc3545' : '#28a745' %>; color: white; font-size: 0.7rem; padding: 0.2rem 0.5rem; border-radius: 12px; margin-top: 0.5rem; display: inline-block;">
              <%= product[:status] %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- 設定メニュー -->
    <h2 style="color: #333; margin: 2rem 0 1rem;">設定</h2>
    <div style="border: 1px solid #e0e0e0; border-radius: 8px; overflow: hidden;">
      <div style="padding: 1rem; border-bottom: 1px solid #f0f0f0; display: flex; justify-content: space-between; align-items: center; cursor: pointer;" onmouseover="this.style.backgroundColor='#f8f8f8'" onmouseout="this.style.backgroundColor='white'">
        <div style="display: flex; align-items: center;">
          <span style="margin-right: 1rem;">📞</span>
          <span>連絡先変更</span>
        </div>
        <span style="color: #ccc; font-size: 1.2rem;">›</span>
      </div>
      <div style="padding: 1rem; border-bottom: 1px solid #f0f0f0; display: flex; justify-content: space-between; align-items: center; cursor: pointer;" onmouseover="this.style.backgroundColor='#f8f8f8'" onmouseout="this.style.backgroundColor='white'">
        <div style="display: flex; align-items: center;">
          <span style="margin-right: 1rem;">🏠</span>
          <span>住所変更</span>
        </div>
        <span style="color: #ccc; font-size: 1.2rem;">›</span>
      </div>
      <div style="padding: 1rem; border-bottom: 1px solid #f0f0f0; display: flex; justify-content: space-between; align-items: center; cursor: pointer;" onmouseover="this.style.backgroundColor='#f8f8f8'" onmouseout="this.style.backgroundColor='white'">
        <div style="display: flex; align-items: center;">
          <span style="margin-right: 1rem;">💳</span>
          <span>支払い変更</span>
        </div>
        <span style="color: #ccc; font-size: 1.2rem;">›</span>
      </div>
      <div style="padding: 1rem; border-bottom: 1px solid #f0f0f0; display: flex; justify-content: space-between; align-items: center; cursor: pointer;" onmouseover="this.style.backgroundColor='#f8f8f8'" onmouseout="this.style.backgroundColor='white'">
        <div style="display: flex; align-items: center;">
          <span style="margin-right: 1rem;">📦</span>
          <span>配達先変更</span>
        </div>
        <span style="color: #ccc; font-size: 1.2rem;">›</span>
      </div>
      <div style="padding: 1rem; display: flex; justify-content: space-between; align-items: center; cursor: pointer; color: #ff4757;" onmouseover="this.style.backgroundColor='#f8f8f8'" onmouseout="this.style.backgroundColor='white'">
        <div style="display: flex; align-items: center;">
          <span style="margin-right: 1rem;">🚪</span>
          <span>ログアウト</span>
        </div>
        <span style="color: #ccc; font-size: 1.2rem;">›</span>
      </div>
    </div>

    <!-- 戻るボタン -->
    <div style="margin-top: 2rem; text-align: center;">
      <%= link_to "商品一覧に戻る", root_path, style: "background: #666; color: white; padding: 12px 24px; text-decoration: none; border-radius: 8px; display: inline-block; transition: all 0.3s ease;" %>
    </div>
  </div>
</div>
